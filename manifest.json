{
  "manifest_version": 3,
  "name": "ALT 报表下载",
  "description": "ALT - 报表下载插件",
  "version": "2.6.3",
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "ALT - 报表下载插件",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "64": "images/64.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/login.js"],
      "matches": ["https://login.account.wal-mart.com/*"]
    },
    {
      "js": ["scripts/home.js"],
      "matches": ["https://seller.walmart.com/home"]
    },
    {
      "js": ["scripts/report.js"],
      "matches": ["https://seller.walmart.com/wfs/reports"],
      "run_at": "document_start"
    },
    {
      "js": ["scripts/stores.js"],
      "matches": ["https://adminnew.ziniao.com/*"]
    },
    {
      "js": ["scripts/other.js"],
      "exclude_matches": [
        "https://seller.walmart.com/home",
        "https://seller.walmart.com/wfs/reports"
      ],
      "matches": ["https://seller.walmart.com/*"]
    },
    {
      "js": ["scripts/xhr.js"],
      "world": "MAIN",
      "run_at": "document_start",
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "scripts/background/index.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage", "alarms", "tabs", "webRequest"],
  "host_permissions": ["<all_urls>"]
}
